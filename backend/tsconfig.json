{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
